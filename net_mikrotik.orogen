name "network_status_monitoring"

using_library "network_status_monitoring"

import_types_from "network_status_monitoringTypes.hpp"

import_types_from "network_status_monitoring/MikrotikRouterStatusMonitorConfig.hpp"
import_types_from "network_status_monitoring/MikrotikRouterStatusResponse.hpp"

task_context "MikrotikRouterStatusMonitorTask" do
    needs_configuration

    # The router configuration info
    property "config", "network_status_monitoring/MikrotikRouterStatusMonitorConfig"

    # The status feedback received from the Router
    output_port "status", "network_status_monitoring/MikrotikRouterStatusResponse"

    periodic 0.1
end
